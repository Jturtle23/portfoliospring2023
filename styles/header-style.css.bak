.side-nav-heading {
	margin: 0 0 30px 0;
	padding: 10px;
	text-align: center;
	background-color: #ffc266;
	font-size: 30px;
	font-family: "Kanit", sans-serif, serif;
	font-weight: 900;
}

.side-nav ul {
	position: fixed;
	top: 0;
	left: 0;
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100%;
	background-color: #ffe0b3;
	list-style-type: none;
	overflow: hidden;
}

/* 0,0,1,1 */
.side-nav a {
	display: block;
	padding: 5px 10px;
	color: #000;
	text-decoration: none;
	font-family: "Chivo Mono", monospace;
}

/* 0,0,1,1 -- these styles are used because they come AFTER ".side-nav a"
a.current-page {
	display: inline-block;
	background-color: #3385ff;
	border-radius: 0 10px 10px 0;
} */

/* 0,0,1,0 */
.side-nav a:hover {
	background-color: #0d0d0d;
	color: #fff;
	font-weight: bold;
}

